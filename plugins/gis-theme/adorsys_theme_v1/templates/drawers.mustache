<!DOCTYPE html>
<html lang="{{ output.get_lang() }}">
<head>
    {{{ output.standard_head_html }}}
</head>
<body {{{ bodyattributes }}} class="bg-gray-100">

    {{#hasnavbar}}
    <header class="bg-white shadow">
        <div class="container mx-auto px-4 py-3">
            {{{ navbar }}}
        </div>
    </header>
    {{/hasnavbar}}

    <main id="page" class="container mx-auto px-4 py-6 grid grid-cols-12 gap-4">
        {{#sidepreblocks}}
        <aside id="region-side-pre" class="col-span-3">
            {{{ sidepreblocks }}}
        </aside>
        {{/sidepreblocks}}

        <section id="region-main" class="col-span-{{#sidepostblocks}}6{{/sidepostblocks}}{{^sidepostblocks}}9{{/sidepostblocks}}">
            {{{ maincontent }}}
        </section>

        {{#sidepostblocks}}
        <aside id="region-side-post" class="col-span-3">
            {{{ sidepostblocks }}}
        </aside>
        {{/sidepostblocks}}
    </main>

    {{#hasfooter}}
    <footer class="bg-gray-800 text-white py-6">
        <div class="container mx-auto">
            {{{ footer }}}
        </div>
    </footer>
    {{/hasfooter}}

    {{{ output.standard_end_of_body_html }}}
</body>
</html>
